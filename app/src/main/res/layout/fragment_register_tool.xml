    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".tool_checkout"
    android:background="@drawable/imagesblue">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:contentPadding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="General Infomations"
            android:textColor="@color/blue"
            android:textSize="15dp"
            android:layout_gravity="left"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Process"
            android:textColor="@color/blue"
            android:textSize="13dp"
            android:layout_marginTop="45dp"
            android:gravity="left" />
        <Spinner
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:id="@+id/spinner_process"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="3dp"
            android:entries="@array/process"
            android:layout_gravity="right"
            android:background="@drawable/spinnerborder"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Tool Category"
            android:textColor="@color/blue"
            android:textSize="13dp"
            android:layout_marginTop="80dp"
            android:gravity="left" />

        <Spinner
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:id="@+id/spinner_category"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="3dp"
            android:entries="@array/process"
            android:layout_gravity="right"
            android:background="@drawable/spinnerborder"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Tool Spec"
            android:textColor="@color/blue"
            android:textSize="13dp"
            android:layout_marginTop="113dp"
            android:gravity="left" />
        <Spinner
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:id="@+id/spinner_spec"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="3dp"
            android:entries="@array/process"
            android:layout_gravity="right"
            android:background="@drawable/spinnerborder"/>

