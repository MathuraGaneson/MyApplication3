<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".tool_checkout"
    android:background="@drawable/imagesblue">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:contentPadding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Add New Specification"
                android:textColor="@color/blue"
                android:textSize="20dp"
                android:gravity="center_horizontal"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Process"
                android:textColor="@color/blue"
                android:textSize="13dp"
                android:layout_marginTop="50dp"
                android:gravity="left" />

            <Spinner
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:id="@+id/spec_process"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="3dp"
                android:entries="@array/process"
                android:layout_gravity="right"
                android:background="@drawable/spinnerborder"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tool Category"
                android:textColor="@color/blue"
                android:textSize="13dp"
                android:layout_marginTop="85dp"
                android:gravity="left" />

            <Spinner
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:id="@+id/spec_category"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="3dp"
                android:entries="@array/process"
                android:layout_gravity="right"
                android:background="@drawable/spinnerborder"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/min_tool"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="120dp"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText

                    android:id="@+id/min_tool2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="New Tool Specification"
                    android:editable="true"
                    android:textSize="12dp"
                    tools:ignore="Deprecated"
                    android:layout_gravity="left"/>

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Min Tool Level"
                android:textColor="@color/blue"
                android:textSize="13dp"
                android:layout_marginTop="180dp"
                android:gravity="left" />

            <Spinner
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:id="@+id/spec_min"
                android:layout_marginTop="175dp"
                android:layout_marginLeft="3dp"
                android:entries="@array/min_tool"
                android:layout_gravity="right"
                android:background="@drawable/spinnerborder"/>



                        <Button
                            android:id="@+id/register_spec"
                            android:layout_height="wrap_content"
                            android:layout_width="120dp"
                            android:text="REGISTER"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_gravity="right"
                            android:enabled="true"
                            android:layout_marginTop="220dp"

                            android:background="@drawable/button"/>

        </com.google.android.material.card.MaterialCardView>



    </FrameLayout>
</ScrollView>