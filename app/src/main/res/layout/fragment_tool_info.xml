<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tool_info"
    android:background="@color/white">

<!--    <ScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content">-->

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/corner"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/barcode_id"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:hint="Barcode ID" />

                <TextView
                    android:id="@+id/tool_status"
                    android:layout_width="300dp"
                    android:layout_below="@id/barcode_id"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:hint="Tool Status"/>

                <TextView
                    android:id="@+id/spec"
                    android:layout_width="300dp"
                    android:layout_below="@id/tool_status"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:hint="Tool Spec"/>

                <TextView
                    android:id="@+id/category"
                    android:layout_width="300dp"
                    android:layout_below="@id/spec"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:hint="Tool Category"/>

                <TextView
                    android:id="@+id/Process"
                    android:layout_width="300dp"
                    android:layout_below="@id/category"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:hint="Process"/>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="300dp"
                    android:layout_below="@id/Process"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:hint="Last PM Date"/>

                <TextView
                    android:id="@+id/barcode_name"
                    android:layout_width="300dp"
                    android:layout_below="@id/date"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:hint="Barcode Name"/>

                <TextView
                    android:id="@+id/Manufacturer"
                    android:layout_width="300dp"
                    android:layout_below="@id/barcode_name"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:hint="Manufacturer"/>

                <TextView
                    android:id="@+id/pm_cycle"
                    android:layout_width="300dp"
                    android:layout_below="@id/Manufacturer"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:hint="PM Cycle"/>

                <TextView
                    android:id="@+id/rack"
                    android:layout_width="300dp"
                    android:layout_below="@id/pm_cycle"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:hint="Rack"/>

                <TextView
                    android:id="@+id/row"
                    android:layout_width="300dp"
                    android:layout_below="@id/rack"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:hint="Row"/>

                <TextView
                    android:id="@+id/compartment"
                    android:layout_width="300dp"
                    android:layout_below="@id/row"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:hint="compartment"/>

<!--                <Button-->
<!--                    android:id="@+id/button_save"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Save"-->
<!--                    android:layout_below="@id/compartment"-->
